{
  "name": "functions",
  "description": "Instagram Automation Cloud Functions",
  "scripts": {
    "lint": "eslint src/**/*.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "npm run lint && npm run build && NODE_OPTIONS='--max-old-space-size=8192' FUNCTIONS_DISCOVERY_TIMEOUT=120000 firebase deploy --only functions",
    "deploy:quick": "npm run build && NODE_OPTIONS='--max-old-space-size=8192' FUNCTIONS_DISCOVERY_TIMEOUT=120000 firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.33.1",
    "@google/generative-ai": "^0.24.1",
    "cloudinary": "^2.9.0",
    "cors": "^2.8.5",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.9.0",
    "openai": "^6.22.0",
    "p-limit": "^7.2.0",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/sharp": "^0.31.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.57.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.29.1",
    "typescript": "^5.3.3",
    "vitest": "^3.2.4"
  },
  "private": true
}
